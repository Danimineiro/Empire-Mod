<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>EmpirePowerGenerator</defName>
        <label>faction power generator</label>
        <description>Outputs energy created by your settlements to your colony!</description>
        <thingClass>Building</thingClass>
        <graphicData>
          <texPath>Things/Building/Transformer</texPath>
          <graphicClass>Graphic_Single</graphicClass>
          <drawSize>(1,1)</drawSize>
          <shadowData>
            <volume>(.35,0.07,.34)</volume>
            <offset>(0,0,0)</offset>
          </shadowData>
          <damageData>
            <rect>(0,0.06,4.4,.28)</rect>
          </damageData>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <rotatable>false</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>Impassable</passability>
        <pathCost>70</pathCost>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <statBases>
          <MaxHitPoints>300</MaxHitPoints>
          <WorkToBuild>500</WorkToBuild>
          <Flammability>0.7</Flammability>
        </statBases>
        <tickerType>Normal</tickerType>
        <size>(1,1)</size>
        <costList>
          <Steel>100</Steel>
          <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <comps>
            <li Class="CompProperties_Power">
            <compClass>FactionColonies.CompPowerEmpire</compClass>
            <basePowerConsumption>-4000</basePowerConsumption>
            <transmitsPower>true</transmitsPower>
            </li>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>FCPowerLinkableLong</li>
                </linkableFacilities>
            </li>
        </comps>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>Power</designationCategory>
        <designationHotKey>Misc5</designationHotKey>
        <constructEffect>ConstructMetal</constructEffect>
        <researchPrerequisites>
          <li>Electricity</li>
        </researchPrerequisites>
        <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    </ThingDef>

    <ThingDef ParentName="BuildingBase" Name="FCPowerLinkableBase" Abstract="True">
        <statBases>
            <WorkToBuild>300</WorkToBuild>
            <Flammability>0.8</Flammability>
            <Beauty>-10</Beauty>
        </statBases>
        <drawerType>MapMeshAndRealTime</drawerType>
        <drawGUIOverlay>true</drawGUIOverlay>
        <altitudeLayer>Building</altitudeLayer>
        <passability>Impassable</passability>
        <blockWind>true</blockWind>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <minifiedDef>MinifiedThing</minifiedDef>
        <neverMultiSelect>false</neverMultiSelect>
        <rotatable>true</rotatable>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <thingCategories>
            <li>BuildingsPower</li>
        </thingCategories>
        <designationCategory>Power</designationCategory>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <comps>
            <li Class="CompProperties_Flickable" />
        </comps>
    </ThingDef>

    <ThingDef ParentName="FCPowerLinkableBase">
        <defName>FCPowerLinkableLong</defName>
        <label>Faction Power Transistor</label>
        <description>Placeholder</description>
        <thingClass>Building</thingClass>
        <graphicData>
            <texPath>Things/Building/Power/FCPowerLinkableLong/FCPowerLinkableLong</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shadowData>
                <volume>(2.9,0.4,0.9)</volume>
            </shadowData>
            <drawSize>(3.5, 1.5)</drawSize>
        </graphicData>
        <rotatable>true</rotatable>
        <statBases>
            <MaxHitPoints>50</MaxHitPoints>
            <Mass>35</Mass>
        </statBases>
        <size>(3,1)</size>
        <costList>
            <Plasteel>75</Plasteel>
            <ComponentIndustrial>6</ComponentIndustrial>
            <ComponentSpacer>1</ComponentSpacer>
        </costList>
        <building>
            <destroySound>BuildingDestroyed_Metal_Small</destroySound>
        </building>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>5</basePowerConsumption>
            </li>
            <li Class="CompProperties_Facility">
                <statOffsets>
                    <FCPowerOutputOffset>2000</FCPowerOutputOffset>
                </statOffsets>
                <maxSimultaneous>20</maxSimultaneous>
                <maxDistance>20</maxDistance>
            </li>
        </comps>
    </ThingDef>
  
</Defs>